[alias]
  a = add
  aa = add --all
  A = add --all
  ap = add -p
  b = branch
  br = branch
  bl = blame
  co = checkout
  cm = commit -m
  cma = commit -am
  cmam = commit --amend
  crp = cherry-pick
  d = diff
  dc = diff --cached
  ds = diff --staged
  dt = difftool
  m = merge
  mg = merge
  pl = pull --tags
  plr = pull --rebase --tags
  plom = pull origin master
  ps = push
  psom = push origin master
  ranking = shortlog -s -n
  rk = shortlog -s -n
  rs = reset
  rb = rebase
  rbi = rebase -i
  s = status
  ss = status -s
  st = stash
  stl = stash list
  sts = stash show
  sta = stash apply
  stp = stash pop
  shame = "!s() { git blame $1 -p | grep 'author ' | cut -d' ' -f2-10 | sort | uniq -c | sort | tail -n1 | cut -c6-30 ; }; s"
  shout = "!s() { git shame $1 | say; }; s"
  tg = tag
  l = log
  lg = log --graph --pretty=format:'%C(yellow)%h%Cred%d %Cblue%aN %Cgreen%ar %Creset%s'
  lgs = log --pretty=format:"%C(yellow)%h\\ %ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=short
  last = log -1 HEAD
  unstage = reset HEAD --
  u = reset HEAD --
  r = remote

